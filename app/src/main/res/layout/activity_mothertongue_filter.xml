<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.init.luckyfriend.activity.MaritalFilter"
    android:orientation="vertical"
    android:background="#fff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help_previous_icon"
            android:id="@+id/back"
            android:background="@drawable/btn_feed_action"
            android:paddingLeft="4dp"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textSize="18sp"
            android:layout_marginLeft="-5sp"
            android:textColor="@color/HelpcolorPrimary"
            android:gravity="center"

            />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mother Tongue"
        android:textColor="#dadada"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:divider="#a9aeb9"
        android:dividerHeight="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#a9aeb9"

        >


    </ListView>
</LinearLayout>
