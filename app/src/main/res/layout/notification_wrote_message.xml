<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:E="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="4dp"
    >

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="1"
    android:layout_marginBottom="10dp"

    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <com.init.luckyfriend.activity.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/notipropic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/iiiii"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marine Madison"
                    android:id="@+id/notiuname"
                    android:layout_toRightOf="@+id/image"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:lineSpacingMultiplier="1.1"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textColor="#535d73"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wrote a message. 1h"
                    android:id="@+id/follow"
                    android:layout_toRightOf="@+id/image"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:lineSpacingMultiplier="1.1"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textColor="#727a8a"
                    android:paddingTop="5dp"
                    />

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/comment_icon_blue"
            android:layout_gravity="center_vertical"
            android:id="@+id/noticomment"
            android:layout_weight="0"
            />
    </LinearLayout>





</android.support.v7.widget.CardView>