<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile.EditProfile"
    android:background="@android:color/white"
    android:paddingBottom="50dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Education"
                android:id="@+id/aboutinfo"
                android:textColor="#2c6290"
                android:textStyle="bold"

                android:textSize="16sp"
                />
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                cardView:cardCornerRadius="3dp"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Education Details (maximum 1000 words)"
                        android:textColorHint="#dadada"
                        android:textColor="#000"
                        android:id="@+id/edudetails"
                        android:gravity="top"
                        android:background="@null"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dadada"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="1dp"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Occupation"
                android:textColor="#2c6290"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                />
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:cardView="http://schemas.android.com/apk/res-auto"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                cardView:cardCornerRadius="3dp"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="Occupation (maximum 1000 words)"
                        android:textColorHint="#dadada"
                        android:textColor="#000"
                        android:id="@+id/occupation"
                        android:gravity="top"
                        android:background="@null"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dadada"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="1dp"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>
</LinearLayout>
        </ScrollView>
    </LinearLayout>