<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:E="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:orientation="vertical"

    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/layout"

        >

        <com.init.luckyfriend.activity.CircleImageView
            android:id="@+id/profilepic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/iiiii"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/profilepic"
            android:layout_toLeftOf="@+id/icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Richael davidsons"
                android:textSize="14sp"
                android:textColor="#000"
                android:id="@+id/name"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 mar 2015 at 10.00"
                android:textSize="12sp"
                android:textColor="#000"
                android:id="@+id/date"
                />



        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dots_icon"
            android:layout_alignParentRight="true"
            android:id="@+id/options"

            />



    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <com.init.luckyfriend.Utils.ResizableImageView
            android:id="@+id/ivFeedCenter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/iiiii"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="#20000000"
android:paddingTop="15dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:id="@+id/likes"
                    android:text="880"
                    android:paddingTop="3dp"
                    android:paddingRight="3dp"
                    android:drawablePadding="5dp"
                    android:textColor="#fff"
                    android:drawableLeft="@drawable/like_icon"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:id="@+id/comments"
                    android:text="24"
                    android:textColor="#fff"
                    android:drawableLeft="@drawable/comments_icon"
                    android:drawablePadding="5dp"
                    android:paddingRight="10dp"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>







</LinearLayout>
</android.support.v7.widget.CardView>
