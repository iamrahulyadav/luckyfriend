<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
<!-- outer circle1-->
    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:id="@+id/mainframe"

        >

        <RelativeLayout
            android:id="@+id/circle1"
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/grey_background_apptour">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/apptour_male"
                android:id="@+id/image2"
                android:background="@drawable/white_background"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                />

        </RelativeLayout>
        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/grey_background_apptour"
            android:layout_gravity="center_vertical|left"

            />

    </FrameLayout>

    <!-- innner circle2-->
    <FrameLayout
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:id="@+id/mainframe2"

        >

        <RelativeLayout
            android:id="@+id/circle2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/grey_background_apptour">

        </RelativeLayout>
        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/grey_background_apptour"
            android:layout_gravity="center_vertical|right"
            android:id="@+id/smallcircle2"
            />

    </FrameLayout>
    <!-- innner circle3-->
    <FrameLayout
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:id="@+id/mainframe4"

        >

        <RelativeLayout
            android:id="@+id/circle4"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="left|bottom"
            android:background="@drawable/grey_background_apptour">
        </RelativeLayout>
    </FrameLayout>



    <!-- innner circle3-->
    <FrameLayout
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:id="@+id/mainframe3"

        >

        <RelativeLayout
            android:id="@+id/circle3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/grey_background_apptour">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/apptour_female"
                android:id="@+id/image3"
                android:background="@drawable/white_background"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/grey_background_apptour"
            android:layout_gravity="center_vertical|right"
            android:id="@+id/smallcircle3"
            />
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/comment_blue"
    android:layout_marginBottom="20dp"
    android:id="@+id/location"
    />
    </FrameLayout>

</FrameLayout>