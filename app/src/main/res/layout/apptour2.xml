<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:id="@+id/mainframe"

        >
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="@drawable/grey_background_apptour"
            android:id="@+id/circle1"
            android:layout_gravity="center_horizontal"
            >

        </RelativeLayout>
            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/apptour_male"
                android:background="@drawable/white_background"
                android:padding="9dp"
                />


            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/male_icon_apptour"
                android:background="@drawable/white_background"
                android:padding="10dp"
                android:layout_gravity="center|right"


                />


        </FrameLayout>

    <ImageView
        android:id="@+id/image3"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="45dp"
       android:visibility="gone"
        />

<FrameLayout
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:background="@drawable/search_circle_apptour2"
    android:layout_gravity="center_horizontal|center_vertical"
    android:id="@+id/searchcontainer"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        >
        <RelativeLayout
            android:id="@+id/circle2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/grey_background_apptour"
            android:layout_gravity="center_horizontal|center_vertical"

            >

            <ImageView
                android:id="@+id/image4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/apptour_female"
                android:layout_centerInParent="true"

                />

        </RelativeLayout>

    </FrameLayout>

</FrameLayout>
<FrameLayout
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:id="@+id/handlecontainer"
    android:layout_gravity="center_vertical|center_horizontal"
    >
    <View
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/search_handle"
        android:layout_gravity="bottom|right"
        android:id="@+id/searchh"
        />
</FrameLayout>

</FrameLayout>
